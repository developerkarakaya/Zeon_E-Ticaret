<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="contact-title">
                    <h4>İletişim</h4>
                    <p>
                        Zeon Ticaret İletişim Bilgileri
                    </p>
                </div>
                <div class="contact-widget">
                    <div class="cw-item">
                        <div class="ci-icon">
                            <i class="ti-location-pin"></i>
                        </div>
                        <div class="ci-text">
                            <span>Adres:</span>
                            <p>İstanbul/Şişli</p>
                        </div>
                    </div>
                    <div class="cw-item">
                        <div class="ci-icon">
                            <i class="ti-mobile"></i>
                        </div>
                        <div class="ci-text">
                            <span>Telefon:</span>
                            <p>+65 11.188.888</p>
                        </div>
                    </div>
                    <div class="cw-item">
                        <div class="ci-icon">
                            <i class="ti-email"></i>
                        </div>
                        <div class="ci-text">
                            <span>E-mail:</span>
                            <p>ZeonTicaret@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1">
                <div class="contact-form">
                    <div class="leave-comment">
                        <h4>Mesaj Gönder</h4>
                        <p>Sormak İstediklerinizi Sorabilirsiniz Daha Sonra Dönüş Yapılacaktır.</p>
                        <form action="#" class="comment-form">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" placeholder="İsim Giriniz..">
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" placeholder="E-mail Giriniz..">
                                </div>
                                <div class="col-lg-12">
                                    <textarea placeholder="Mesaj Giriniz.."></textarea>
                                    <button type="submit" class="site-btn">Mesaj Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->