
@model IEnumerable<ZeonTicaret.WebUI.Models.Kategori>



<div class="single-banner">
    <div class="inner-text">
        <h4>KATEGORİLER</h4>
    </div>
</div>
<br />
<div class="banner-section spad">
    <div class="container-fluid">
        <div class="row">
            @foreach (var kategori in Model)
            {
                <div class="col-lg-4">
                    <div class="single-banner">
                        <img src="/Content/fashi/img/laptop.jpg" alt="">
                        <div class="inner-text">
                            <h4 style="background-color:#e7ab3c; color:white;">@kategori.Adi</h4>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
