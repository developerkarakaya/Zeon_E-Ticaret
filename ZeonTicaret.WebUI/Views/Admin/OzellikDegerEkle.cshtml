
@{
    ViewBag.Title = "Ozellik Deger Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.OzellikTip>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Değer Ekleme Sayfası
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="/Admin/OzellikDegerEkle">
                    <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı</label>

                    <select class="form-control input-lg m-bot15" name="OzellikTipID">
                        @foreach (var tip in Model)
                        {
                            <option value="@tip.id">@tip.Adi</option>
                        }
                    </select>



                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Değer Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Değer Açıklaması</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">
                        </div>
                    </div>




                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Özellik Değer Ekle</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>