
@{
    ViewBag.Title = "Urun Ozellikleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.OzellikUrun>

<section class="panel">
    <header class="panel-heading">
        <span class="label label-info">Ürün Özellikleri</span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="float:right">
                    <button id="editable-sample_new" class="btn btn-success">
                        <a href="/Admin/UrunOzellikEkle" style="color:white">Yeni Ürün Özelliği </a> <i class="icon-plus"></i>
                    </button>
                </div>
            </div>
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Özellik Tip Adı</th>
                        <th>Özellik Değer Adı</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ozellik in Model)
                    {

                        <tr class="">
                            @if (ozellik.Urun != null)
                            {
                                <td>@ozellik.Urun.Adi</td>

                            }
                            @if (ozellik.OzellikTip != null)
                            {
                                <td>@ozellik.OzellikTip.Adi</td>

                            }
                            @if (ozellik.OzellikDeger != null)
                            {
                                <td>@ozellik.OzellikDeger.Adi</td>
                            }
                            <td><a class="btn btn-success" href="#"><i class="icon-pencil"></i></a></td>

                            @if (ozellik.Urun != null && ozellik.OzellikTip != null && ozellik.OzellikDeger != null)
                            {
                                <td><a class="btn btn-danger" href="@Url.Action("UrunOzellikSil", "Admin", new { urunId = ozellik.UrunId, tipId = ozellik.OzellikTipId, degerId = ozellik.OzellikDegerId })"><i class="icon-trash"></i></a></td>

                            }


                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
