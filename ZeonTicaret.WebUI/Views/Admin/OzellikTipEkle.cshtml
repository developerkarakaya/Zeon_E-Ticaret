
@{
    ViewBag.Title = "Ozellik Tip Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Kategori>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Tip Ekleme Sayfası
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="/Admin/OzellikTipEkle">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Açıklaması</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">
                        </div>
                    </div>


                    <select class="form-control input-lg m-bot15" name="KategoriID">
                        @foreach (var ktg in Model)
                        {
                            <option value="@ktg.id">@ktg.Adi</option>
                        }
                    </select>


                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Özellik Tip Ekle</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

