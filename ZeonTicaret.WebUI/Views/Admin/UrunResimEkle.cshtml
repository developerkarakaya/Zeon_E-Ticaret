
@{
    ViewBag.Title = "Ürün Resim Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using ZeonTicaret.WebUI.Models;
@model IEnumerable<ZeonTicaret.WebUI.Models.Resim>

<form action="/Admin/UrunResimEkle" method="post" enctype="multipart/form-data">
    <input type="hidden" name="uId" value="@ViewBag.Id" />
    <div class="form-group">
        <label class="control-label col-md-3">Ürün Resmi Ekle</label>
        <br />
        <br />
        
        <div class="controls col-md-9">
            <div class="fileupload fileupload-new" data-provides="fileupload">
                <span class="btn btn-white btn-file">
                    <span class="fileupload-new"><i class="icon-paper-clip"></i>Resim Seç</span>
                    <input type="file" name="fileUpload" class="default" />
                </span>
                <span class="fileupload-preview" style="margin-left:5px;"></span>
                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
            </div>
        </div>
    </div>
    <br />
    <br />
    <input type="submit" name="name" class="btn btn-success" value="Kaydet" />

</form>


<section class="panel">
    <header class="panel-heading">
        <span class="label label-info"> @TempData["UrunAdi"]  Ürün Resimleri</span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
            </div>
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Resim Id</th>
                        <th>Ürün Resim </th>
                        <th>Ürün Resim Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rsm in Model)
                    {
                        <tr class="">
                            <td>@rsm.id</td>
                            <td><img width="150" height="150" src="@rsm.OrtaYol" /></td>
                            <td><a href="/Admin/UrunResimSil     " class="btn btn-danger" >Resim Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


