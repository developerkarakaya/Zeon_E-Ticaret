
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Ekleme Sayfası
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" method="post" action="/Admin/KategoriEkle" >
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Açıklaması</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Kategori Ekle</button> 
                    </div>

                </form>
            </div>
        </section>
    </div>
</div>

