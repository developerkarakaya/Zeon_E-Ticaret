
@{
    ViewBag.Title = "Slider Resimleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Resim>

<form action="/Admin/SliderResimEkle" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-md-3">Slider Resmi</label>
        <br />
        <br />

        <div class="controls col-md-9">
            <div class="fileupload fileupload-new" data-provides="fileupload">
                <span class="btn btn-white btn-file">
                    <span class="fileupload-new"><i class="icon-paper-clip"></i>Resim Seç</span>
                    <input type="file" name="fileUpload" class="default" />
                </span>
                <span class="fileupload-preview" style="margin-left:5px;"></span>
                <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
            </div>
        </div>
    </div>
    <br />
    <br />
    <input type="submit" name="name" class="btn btn-success" value="Kaydet" />
</form>
<br />
<br />
<table class="table table-striped table-hover table-bordered" id="editable-sample">

    <thead>
        <tr>
            <th>Slider Resim Id</th>
            <th>Slider Resim</th>
            <th>Slider Resim Sil</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var rsm in Model)
            {
                <tr>
                    <td>@rsm.id</td>
                    <td><img width="400" height="200" src="@rsm.BuyukYol" /></td>
                    <td>
                        <a class="btn btn-danger" href="/Admin/SliderResimSil/@rsm.id">Sil</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

