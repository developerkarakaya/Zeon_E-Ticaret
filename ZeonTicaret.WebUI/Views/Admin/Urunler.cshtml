
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Urun>


<section class="panel">
    <header class="panel-heading">
        <span class="label label-info" >Ürünler</span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="float:right">
                    <button id="editable-sample_new" class="btn btn-success" >
                        <a href="/Admin/UrunEkle" style="color:white">Yeni Ürün</a> <i class="icon-plus"></i>
                    </button>

                </div>
            </div>
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Ürün Açıklaması</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori Adı</th>
                        <th>Eklenme Tarihi</th>
                        <th>Marka Adı</th>
                        <th>Son Kullanma Tarihi</th>
                        <th>Resim Ekle</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var urun in Model)
                    {

                    <tr class="">
                        <td >@urun.Adi</td>
                        <td>@urun.Aciklama</td>
                        <td>@urun.AlisFiyat</td>
                        <td>@urun.SatisFiyat</td>
                        <td>@urun.Kategori.Adi</td>
                        <td>@urun.EklenmeTarihi</td>
                        <td>@urun.Marka.Adi</td>
                        <td>@urun.sonKullanmaTarihi</td>
                        <td><a class="btn btn-info" href="/Admin/UrunResimEkle/@urun.id"><i class="icon-eye-open"></i></a></td>
                        <td><a class="btn btn-success" href="/Admin/UrunGuncelle/@urun.id"><i class="icon-pencil"></i></a></td>
                        <td><a class="btn btn-danger" href="/Admin/UrunSil/@urun.id"><i class="icon-trash"></i></a></td>
                    </tr>
       
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
