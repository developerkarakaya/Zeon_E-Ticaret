
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Marka>

@section head{
    <link href="/ContentF/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />

}
<section class="panel">
    <header class="panel-heading">
        <span class="label label-info">Markalar</span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="float:right">
                    <button id="editable-sample_new" class="btn btn-success">
                        <a href="/Admin/MarkaEkle" style="color:white">Yeni Marka</a> <i class="icon-plus"></i>
                    </button>

                </div>
            </div>
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Marka Açıklama</th>
                        <th>Marka Resmi Göster</th>
                        <th>Marka Resmi Sil</th>
                        <th>Düzenle</th>
                        <th>Marka Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                    <tr class="">
                        <td>@marka.Adi</td>
                        <td>@marka.Aciklama</td>
                        <td>
                            <a class="fancybox" href="@ZeonTicaret.WebUI.App_Classes.Context.Baglanti.Resim.FirstOrDefault(x=>x.id==marka.ResimID).OrtaYol"><i class="icon-eye-open"></i></a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/MarkaResimSil/@marka.ResimID">Sil</a>
                        </td>
                        <td><a class="btn btn-success" href="/Admin/MarkaGuncelle/@marka.id"><i class="icon-pencil"></i></a></td>
                        <td><a class="btn btn-danger" href="/Admin/MarkaSil/@marka.id"><i class="icon-trash"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section scripts{
    <script src="/ContentF/assets/fancybox/source/jquery.fancybox.js"></script>

    <script type="text/javascript">$(function() {
        //    fancybox
          jQuery(".fancybox").fancybox();
      });</script>
}
