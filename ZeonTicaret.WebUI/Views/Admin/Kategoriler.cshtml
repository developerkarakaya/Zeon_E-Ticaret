
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ZeonTicaret.WebUI.Models.Kategori>
@section head{
    <link href="/ContentF/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />

}
<section class="panel">
    <header class="panel-heading">
        <span class="label label-info">Kategoriler</span>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="float:right">
                    <button id="editable-sample_new" class="btn btn-success">
                        <a href="/Admin/KategoriEkle" style="color:white">Yeni Kategori</a> <i class="icon-plus"></i>
                    </button>

                </div>
            </div>
            <br />
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Kategori Açıklaması</th>
                        <th>Kategori Resmi Göster</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kategori in Model)
                    {

                        <tr class="">
                            <td>@kategori.Adi</td>
                            <td>@kategori.Aciklama</td>
                            <td>
                                <a class="fancybox" href=""><i class="icon-eye-open"></i></a>
                            </td>
                            <td><a class="btn btn-success" href="/Admin/KategoriGuncelle/@kategori.id"><i class="icon-pencil"></i></a></td>
                            <td><a class="btn btn-danger" href="/Admin/KategoriSil/@kategori.id"><i class="icon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


@section scripts{
    <script src="/ContentF/assets/fancybox/source/jquery.fancybox.js"></script>

    <script type="text/javascript">
$(function() {
        //    fancybox
          jQuery(".fancybox").fancybox();
      });</script>
}


